<!--Content-->
<section id="signup">
  <div class="container">
    <div class="row margin-40">
      
        <div class="span6 offset3 text-center signup">
          <h3>Regístrate</h3><br />
          

					<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
					  <%= devise_error_messages! %>

      		<div class="control-group">
      			<div class="controls">
      			    <div class="input-prepend">
      				<span class="add-on"><i class="icon-lock"></i></span>
							<%= f.text_field :email, class: 'input-large', placeholder: 'Correo Electrónico' %>
      				</div>
      			</div>
      		</div>

					 
      		          		          		
      		<div class="control-group">
      			<div class="controls">
      			    <div class="input-prepend">
      				<span class="add-on"><i class="icon-lock"></i></span>
							<%= f.password_field :password, class: 'input-large', placeholder: 'Password' %>
      				</div>
      			</div>
      		</div> 

      		<div class="control-group">
      			<div class="controls">
      			    <div class="input-prepend">
      				<span class="add-on"><i class="icon-lock"></i></span>
							<%= f.password_field :password_confirmation, class: 'input-large', placeholder: 'Password Confirmation' %>
      				</div>
      			</div>
      		</div> 



      		<div class="control-group">
      	      <div class="controls">
      	       <%= f.submit "Regístrate", class: 'btn-main' %>
      	      </div>
      	  </div>
					<% end %>

					<%#= render "devise/shared/links" %>

  
      	  </form>
  	  
      </div><!--End Span6-->
      
    </div><!--End Row-->
  </div><!--End Container-->
</section>

<%= render "devise/shared/links" %>
