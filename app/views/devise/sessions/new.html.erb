<!--Content-->
<section id="signup">
  <div class="container">
    <div class="row margin-40">
      
        <div class="span6 offset3 text-center signup">
          <h3>Accede a tu cuenta</h3><br />
          

					<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

      		<div class="control-group">
      			<div class="controls">
      			    <div class="input-prepend">
      				<span class="add-on"><i class="icon-lock"></i></span>
							<%= f.text_field :email, class: 'input-large', placeholder: 'Correo Electrónico' %>
      				</div>
      			</div>
      		</div>

					 
      		          		          		
      		<div class="control-group">
      			<div class="controls">
      			    <div class="input-prepend">
      				<span class="add-on"><i class="icon-lock"></i></span>
							<%= f.password_field :password, class: 'input-large', placeholder: 'Password' %>
      				</div>
      			</div>
      		</div> 

      		<div class="control-group">
      			<div class="controls">
      			    <div class="input-prepend">
								  <%# if devise_mapping.rememberable? -%>
								    <div><%#= f.check_box :remember_me %> <%= f.label :remember_me %></div>
								  <%# end -%>
      				</div>
      			</div>
      		</div>

      		<div class="control-group">
      	      <div class="controls">
      	       <%= f.submit "Accede", class: 'btn-main' %>
      	      </div>
      	      <a class="small-message" href="#"><small>¿Necesitas una cuenta?</small></a>
      	  </div>
					<% end %>

					<%#= render "devise/shared/links" %>

  
      	  </form>
  	  
      </div><!--End Span6-->
      
    </div><!--End Row-->
  </div><!--End Container-->
</section>